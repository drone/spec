{
    "version": 1,
    "type": "pipeline",
    "spec": {
        "stages": [
            {
                "name": "build",
                "type": "ci",
                "spec": {
                    "platform": {
                        "arch": "arm64",
                        "os": "linux"
                    },
                    "runtime": {
                        "type": "cloud",
                        "spec": {
                            "size": "xlarge"
                        }
                    },
                    "steps": [
                        {
                            "name": "build",
                            "type": "script",
                            "spec": {
                                "image": "golang",
                                "run": "go build"
                            }
                        },
                        {
                            "type": "parallel",
                            "spec": {
                                "steps": [
                                    {
                                        "name": "test-go",
                                        "type": "script",
                                        "spec": {
                                            "run": "go test"
                                        }
                                    },
                                    {
                                        "name": "test-npm",
                                        "type": "script",
                                        "spec": {
                                            "run": "npm install\nnpm run test"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}